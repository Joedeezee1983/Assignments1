#Task 1
weather = "sunny"

if weather == "sunny":
    print("Wear sunglasses!")
else:
    print("Take an umbrella!")
    
# Task 2
mood = input("How are you feeling today? ")

if mood.lower() == "happy":
    print("That's great to hear!")
elif mood.lower() == "sad":
    print("I hope you feel better soon!")
